---
import Layout from "../layouts/Layout.astro";
import prisma from "../lib/prisma";
import { BookingWidget } from "../components/BookingWidget";
import { InstructionModal } from "../components/InstructionModal";

// Fetch services and settings from DB
const services = await prisma.service.findMany({
    where: { active: true },
    orderBy: { sortOrder: "asc" },
});

const settings = await prisma.settings.findUnique({
    where: { id: "main" },
});

const businessName = settings?.businessName || "AutoSpa";

// Prepare data for React component
const servicesData = services.map((s) => ({
    id: s.id,
    name: s.name,
    description: s.description,
    price: Number(s.price),
    duration: s.duration,
}));

const settingsData = {
    businessName: settings?.businessName || "AutoSpa",
    whatsappNumber: settings?.whatsappNumber || "+595991234567",
    openTime: settings?.openTime || "08:00",
    closeTime: settings?.closeTime || "18:00",
    slotDuration: settings?.slotDuration || 30,
    workingDays: settings?.workingDays
        ? settings.workingDays.split(",").map(Number)
        : [1, 2, 3, 4, 5, 6],
    welcomeMessage: settings?.welcomeMessage || "¡Gracias por tu reserva!",
    currency: settings?.currency || "PYG",
    heroImageUrl: settings?.heroImageUrl,
    timezone: settings?.timezone || "America/Asuncion",
};
---

<Layout title={`${businessName} | El Arte del Cuidado`}>
    <InstructionModal client:load />
    <!-- Hero Section -->
    <section
        class="relative h-screen flex items-center justify-center overflow-hidden"
    >
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-luxury-black z-10"
            >
            </div>
            <!-- Placeholder for high-end car wash image - using a dark abstract luxury texture if specific image not available, or standard random car image -->
            <img
                src={settingsData.heroImageUrl ||
                    "https://images.unsplash.com/photo-1601362840469-51e4d8d58785?q=80&w=2600&auto=format&fit=crop"}
                alt="Proceso de lavado de lujo"
                class="w-full h-full object-cover opacity-60 scale-105 animate-slow-zoom"
            />
        </div>

        <!-- Content -->
        <div class="relative z-20 text-center px-4 max-w-5xl mx-auto mt-[-5vh]">
            <p
                class="text-primary-500 font-bold uppercase tracking-[0.3em] text-sm md:text-base mb-6 animate-fade-in-up"
            >
                Servicio Exclusivo de Detailing
            </p>
            <h1
                class="font-heading text-5xl md:text-7xl lg:text-8xl text-white font-medium tracking-tight mb-8 leading-tight animate-fade-in-up delay-100"
            >
                EL ARTE DEL <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-white via-gray-200 to-gray-500"
                    >CUIDADO AUTOMOTRIZ</span
                >
            </h1>
            <p
                class="font-sans text-gray-400 text-lg md:text-xl max-w-2xl mx-auto mb-12 font-light leading-relaxed animate-fade-in-up delay-200"
            >
                Experimenta la perfección en cada detalle. Tecnología de
                vanguardia y pasión por la estética para vehículos que merecen
                lo mejor.
            </p>

            <a
                href="#reservar"
                class="group relative inline-flex items-center gap-3 px-8 py-4 bg-primary-600 text-white font-sans font-semibold tracking-wide rounded-sm overflow-hidden transition-all hover:bg-primary-500 animate-fade-in-up delay-300"
            >
                <span class="relative z-10">RESERVAR ESPACIO</span>
                <span
                    class="relative z-10 group-hover:translate-x-1 transition-transform duration-300"
                    >→</span
                >
            </a>
        </div>

        <!-- Scroll Indicator -->
        <div
            class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce opacity-50"
        >
            <span
                class="text-xs tracking-widest uppercase text-gray-500 mb-2 block text-center"
                >Scroll</span
            >
            <div
                class="w-[1px] h-12 bg-gradient-to-b from-white to-transparent mx-auto"
            >
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-24 bg-luxury-black relative z-10">
        <div class="container mx-auto px-6">
            <div
                class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6"
            >
                <div>
                    <h2
                        class="font-heading text-4xl md:text-5xl text-white mb-4"
                    >
                        Servicios Signature
                    </h2>
                    <p class="text-gray-400 font-sans font-light max-w-md">
                        Tratamientos diseñados para devolverle a su vehículo su
                        esplendor original.
                    </p>
                </div>
                <div
                    class="h-[1px] flex-1 bg-white/10 mx-8 hidden md:block mb-4"
                >
                </div>
                <div class="text-right hidden md:block">
                    <span class="text-primary-500 font-heading text-xl italic"
                        >{services.length} opciones</span
                    >
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    services.map((service, index) => (
                        <div class="group relative bg-luxury-card border border-white/5 p-8 hover:border-white/20 transition-all duration-500 hover:bg-white/5">
                            <div class="absolute top-0 right-0 p-8 opacity-20 group-hover:opacity-40 transition-opacity">
                                <span class="font-heading text-6xl text-white/10">
                                    {String(index + 1).padStart(2, "0")}
                                </span>
                            </div>

                            <h3 class="font-heading text-2xl text-white mb-3 group-hover:text-primary-400 transition-colors">
                                {service.name}
                            </h3>
                            <div class="w-12 h-[1px] bg-primary-600 mb-6 group-hover:w-20 transition-all duration-500" />

                            <p class="text-gray-400 font-sans font-light leading-relaxed mb-8 min-h-[3rem]">
                                {service.description ||
                                    "Experiencia de limpieza y cuidado detallado para su vehículo."}
                            </p>

                            <div class="flex items-center justify-between mt-auto">
                                <span class="font-sans text-sm text-gray-500 uppercase tracking-wider">
                                    {service.duration} MIN
                                </span>
                                <span class="font-heading text-xl text-white">
                                    {new Intl.NumberFormat("es-PY").format(
                                        Number(service.price),
                                    )}{" "}
                                    <span class="text-sm text-primary-500">
                                        ₲
                                    </span>
                                </span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Booking Section -->
    <section id="reservar" class="py-24 bg-[#080808] relative">
        <!-- Background decorative elements -->
        <div
            class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-primary-900/50 to-transparent"
        >
        </div>
        <div
            class="absolute top-1/2 left-0 w-96 h-96 bg-primary-900/10 rounded-full blur-[128px] -translate-x-1/2 -translate-y-1/2 pointer-events-none"
        >
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <div class="text-center mb-16">
                <span
                    class="text-primary-500 font-medium tracking-widest text-sm uppercase mb-3 block"
                    >Configuración</span
                >
                <h2 class="font-heading text-3xl md:text-5xl text-white">
                    Configure su Cita
                </h2>
            </div>

            <div class="max-w-4xl mx-auto">
                <!-- React Widget -->
                <BookingWidget
                    services={servicesData}
                    settings={settingsData}
                    client:visible
                />
            </div>
        </div>
    </section>
</Layout>

<style>
    .animate-slow-zoom {
        animation: zoom 20s infinite alternate;
    }

    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
    }

    .delay-100 {
        animation-delay: 0.1s;
    }
    .delay-200 {
        animation-delay: 0.3s;
    }
    .delay-300 {
        animation-delay: 0.5s;
    }

    @keyframes zoom {
        0% {
            transform: scale(1);
        }
        100% {
            transform: scale(1.1);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

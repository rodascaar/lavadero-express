---
import AdminLayout from "../../layouts/AdminLayout.astro";
import prisma from "../../lib/prisma";

let settings = await prisma.settings.findUnique({
    where: { id: "main" },
});

if (!settings) {
    settings = await prisma.settings.create({
        data: { id: "main" },
    });
}

const workingDays = settings.workingDays.split(",").map(Number);

const dayLabels = [
    "Domingo",
    "Lunes",
    "Martes",
    "Mi√©rcoles",
    "Jueves",
    "Viernes",
    "S√°bado",
];
---

<AdminLayout title="Configuraci√≥n">
    <form id="settings-form" class="max-w-2xl space-y-8">
        <!-- Business Info -->
        <div class="card p-6">
            <h3
                class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
                üè¢ Informaci√≥n del Negocio
            </h3>

            <div class="space-y-4">
                <div>
                    <label class="label">Nombre del negocio</label>
                    <input
                        type="text"
                        name="businessName"
                        class="input"
                        value={settings.businessName}
                        placeholder="Mi Lavadero"
                    />
                </div>

                <div>
                    <label class="label">Direcci√≥n</label>
                    <input
                        type="text"
                        name="address"
                        class="input"
                        value={settings.address || ""}
                        placeholder="Av. Principal 123, Ciudad"
                    />
                </div>

                <div>
                    <label class="label">Moneda</label>
                    <select name="currency" class="input">
                        <option
                            value="PYG"
                            selected={settings.currency === "PYG"}
                            >Guaran√≠es (‚Ç≤)</option
                        >
                        <option
                            value="USD"
                            selected={settings.currency === "USD"}
                            >D√≥lares ($)</option
                        >
                    </select>
                </div>

                <div>
                    <label class="label">Zona Horaria</label>
                    <select name="timezone" class="input">
                        <option
                            value="America/Asuncion"
                            selected={(settings as any).timezone ===
                                "America/Asuncion"}>Paraguay / Asunci√≥n</option
                        >
                        <option
                            value="America/Argentina/Buenos_Aires"
                            selected={(settings as any).timezone ===
                                "America/Argentina/Buenos_Aires"}
                            >Argentina / Buenos Aires</option
                        >
                        <option
                            value="America/Sao_Paulo"
                            selected={(settings as any).timezone ===
                                "America/Sao_Paulo"}>Brasil / S√£o Paulo</option
                        >
                        <option
                            value="UTC"
                            selected={(settings as any).timezone === "UTC"}
                            >UTC</option
                        >
                    </select>
                </div>

                <div>
                    <label class="label">Banner de Inicio (URL de imagen)</label
                    >
                    <input
                        type="url"
                        name="heroImageUrl"
                        class="input"
                        value={settings.heroImageUrl || ""}
                        placeholder="https://images.unsplash.com/..."
                    />
                    <p class="text-sm text-gray-400 mt-1">
                        URL de la imagen de fondo para la secci√≥n principal.
                    </p>
                </div>
            </div>
        </div>

        <!-- WhatsApp -->
        <div class="card p-6">
            <h3
                class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
                üì± WhatsApp
            </h3>

            <div class="space-y-4">
                <div>
                    <label class="label"
                        >N√∫mero de WhatsApp (con c√≥digo de pa√≠s)</label
                    >
                    <input
                        type="tel"
                        name="whatsappNumber"
                        class="input"
                        value={settings.whatsappNumber}
                        placeholder="+595991234567"
                    />
                    <p class="text-sm text-gray-400 mt-1">
                        Este n√∫mero recibir√° los tickets de reserva. Formato:
                        +595XXXXXXXXX
                    </p>
                </div>

                <div>
                    <label class="label">Mensaje de bienvenida</label>
                    <textarea
                        name="welcomeMessage"
                        class="input"
                        rows="2"
                        placeholder="¬°Gracias por reservar con nosotros!"
                        >{settings.welcomeMessage}</textarea
                    >
                    <p class="text-sm text-gray-400 mt-1">
                        Este mensaje aparece al final del ticket de WhatsApp
                    </p>
                </div>
            </div>
        </div>

        <!-- Schedule -->
        <div class="card p-6">
            <h3
                class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
                üïê Horarios
            </h3>

            <div class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="label">Hora de apertura</label>
                        <input
                            type="time"
                            name="openTime"
                            class="input"
                            value={settings.openTime}
                        />
                    </div>
                    <div>
                        <label class="label">Hora de cierre</label>
                        <input
                            type="time"
                            name="closeTime"
                            class="input"
                            value={settings.closeTime}
                        />
                    </div>
                </div>

                <div>
                    <label class="label">Duraci√≥n de cada turno (minutos)</label
                    >
                    <select name="slotDuration" class="input">
                        <option
                            value="15"
                            selected={settings.slotDuration === 15}
                            >15 minutos</option
                        >
                        <option
                            value="30"
                            selected={settings.slotDuration === 30}
                            >30 minutos</option
                        >
                        <option
                            value="45"
                            selected={settings.slotDuration === 45}
                            >45 minutos</option
                        >
                        <option
                            value="60"
                            selected={settings.slotDuration === 60}
                            >1 hora</option
                        >
                    </select>
                </div>

                <div>
                    <label class="label"
                        >Tiempo de corte/reserva (minutos)</label
                    >
                    <input
                        type="number"
                        name="bookingBufferMinutes"
                        class="input"
                        value={(settings as any).bookingBufferMinutes}
                        min="0"
                        placeholder="10"
                    />
                    <p class="text-sm text-gray-400 mt-1">
                        Minutos antes del turno en los que ya no se permite
                        reservar (ej: 10 min).
                    </p>
                </div>

                <div>
                    <label class="label">Capacidad por horario</label>
                    <select name="maxSlotsPerTime" class="input">
                        <option
                            value="1"
                            selected={(settings as any).maxSlotsPerTime === 1}
                            >1 veh√≠culo</option
                        >
                        <option
                            value="2"
                            selected={(settings as any).maxSlotsPerTime === 2}
                            >2 veh√≠culos</option
                        >
                        <option
                            value="3"
                            selected={(settings as any).maxSlotsPerTime === 3}
                            >3 veh√≠culos</option
                        >
                        <option
                            value="4"
                            selected={(settings as any).maxSlotsPerTime === 4}
                            >4 veh√≠culos</option
                        >
                        <option
                            value="5"
                            selected={(settings as any).maxSlotsPerTime === 5}
                            >5 veh√≠culos</option
                        >
                    </select>
                    <p class="text-sm text-gray-400 mt-1">
                        Cu√°ntos veh√≠culos pueden atenderse simult√°neamente en
                        cada horario
                    </p>
                </div>

                <div>
                    <label class="label">D√≠as de trabajo</label>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 mt-2">
                        {
                            dayLabels.map((day, index) => (
                                <label
                                    class={`flex items-center gap-2 p-3 rounded-lg border cursor-pointer transition-colors ${workingDays.includes(index) ? "border-primary-500 bg-primary-500/20 text-white" : "border-white/10 hover:border-primary-500/50 text-gray-400"}`}
                                >
                                    <input
                                        type="checkbox"
                                        name="workingDays"
                                        value={index}
                                        checked={workingDays.includes(index)}
                                        class="w-4 h-4 text-primary-600 rounded"
                                    />
                                    <span class="text-sm">{day}</span>
                                </label>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="card p-6">
            <h3
                class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
                üí≥ M√©todos de Pago
            </h3>

            <div class="space-y-4">
                <div
                    id="payment-methods-list"
                    class="grid grid-cols-1 sm:grid-cols-2 gap-4"
                >
                    <!-- Methods will be loaded here -->
                    <div
                        class="animate-pulse col-span-2 text-center py-4 text-gray-400"
                    >
                        Cargando m√©todos de pago...
                    </div>
                </div>

                <div class="flex gap-2 pt-4 border-t border-white/5">
                    <input
                        type="text"
                        id="new-payment-method"
                        class="input flex-1"
                        placeholder="Nuevo m√©todo (ej: Transferencia)"
                    />
                    <button
                        type="button"
                        id="btn-add-payment-method"
                        class="btn btn-secondary px-4"
                    >
                        ‚ûï A√±adir
                    </button>
                </div>
                <p class="text-sm text-gray-400 mt-1">
                    Estos m√©todos aparecer√°n en el widget de reserva para los
                    clientes.
                </p>
            </div>
        </div>

        <!-- Submit -->
        <div class="flex gap-4">
            <button type="submit" class="btn btn-primary flex-1" id="btn-save">
                üíæ Guardar Cambios
            </button>
        </div>

        <div
            id="save-message"
            class="hidden text-center p-4 rounded-lg bg-emerald-50 text-emerald-700"
        >
            ‚úÖ Configuraci√≥n guardada correctamente
        </div>
    </form>

    <script>
        const form = document.getElementById(
            "settings-form",
        ) as HTMLFormElement;
        const saveMessage = document.getElementById(
            "save-message",
        ) as HTMLDivElement;
        const saveBtn = document.getElementById(
            "btn-save",
        ) as HTMLButtonElement;

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData(form);

            // Get working days as array
            const workingDays = formData.getAll("workingDays").join(",");

            const data = {
                businessName: formData.get("businessName"),
                address: formData.get("address"),
                currency: formData.get("currency"),
                whatsappNumber: formData.get("whatsappNumber"),
                welcomeMessage: formData.get("welcomeMessage"),
                openTime: formData.get("openTime"),
                closeTime: formData.get("closeTime"),
                slotDuration: parseInt(formData.get("slotDuration") as string),
                maxSlotsPerTime: parseInt(
                    formData.get("maxSlotsPerTime") as string,
                ),
                heroImageUrl: formData.get("heroImageUrl"),
                bookingBufferMinutes: formData.get("bookingBufferMinutes"),
                timezone: formData.get("timezone"),
                workingDays,
            };

            saveBtn.disabled = true;
            saveBtn.textContent = "Guardando...";

            try {
                const response = await fetch("/api/settings", {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    saveMessage.classList.remove("hidden");
                    setTimeout(() => saveMessage.classList.add("hidden"), 3000);
                } else {
                    alert("Error al guardar la configuraci√≥n");
                }
            } catch (error) {
                alert("Error de conexi√≥n");
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = "üíæ Guardar Cambios";
            }
        });

        // Payment Methods Management
        const methodsList = document.getElementById("payment-methods-list");
        const newMethodInput = document.getElementById(
            "new-payment-method",
        ) as HTMLInputElement;
        const addMethodBtn = document.getElementById("btn-add-payment-method");

        async function loadPaymentMethods() {
            try {
                const response = await fetch("/api/admin/payment-methods");
                if (response.ok) {
                    const methods = await response.json();
                    renderMethods(methods);
                }
            } catch (error) {
                console.error("Error loading methods:", error);
            }
        }

        function renderMethods(methods: any[]) {
            if (!methodsList) return;
            methodsList.innerHTML =
                methods
                    .map(
                        (method) => `
                <div class="flex items-center justify-between p-3 rounded-lg border border-white/10 bg-white/5">
                    <span class="text-sm font-medium ${method.active ? "text-white" : "text-gray-500 line-through"}">${method.name}</span>
                    <div class="flex gap-2">
                        <button type="button" class="btn-toggle-method p-1 text-gray-400 hover:text-primary-500" data-id="${method.id}" data-active="${method.active}" title="${method.active ? "Desactivar" : "Activar"}">
                            ${method.active ? "üëÅÔ∏è" : "üï∂Ô∏è"}
                        </button>
                        <button type="button" class="btn-delete-method p-1 text-gray-400 hover:text-red-500" data-id="${method.id}" title="Eliminar">
                            üóëÔ∏è
                        </button>
                    </div>
                </div>
            `,
                    )
                    .join("") ||
                '<div class="col-span-2 text-center py-4 text-gray-500">No hay m√©todos de pago configurados</div>';

            // Re-attach event listeners
            document.querySelectorAll(".btn-toggle-method").forEach((btn) => {
                btn.addEventListener("click", async (e) => {
                    const target = e.currentTarget as HTMLButtonElement;
                    const id = target.dataset.id;
                    const active = target.dataset.active === "true";
                    await updateMethod(id!, { active: !active });
                });
            });

            document.querySelectorAll(".btn-delete-method").forEach((btn) => {
                btn.addEventListener("click", async (e) => {
                    const target = e.currentTarget as HTMLButtonElement;
                    const id = target.dataset.id;
                    if (
                        confirm(
                            "¬øEst√°s seguro de eliminar este m√©todo de pago?",
                        )
                    ) {
                        await deleteMethod(id!);
                    }
                });
            });
        }

        async function updateMethod(id: string, data: any) {
            try {
                const response = await fetch(
                    `/api/admin/payment-methods/${id}`,
                    {
                        method: "PUT",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(data),
                    },
                );
                if (response.ok) loadPaymentMethods();
            } catch (error) {
                alert("Error al actualizar m√©todo");
            }
        }

        async function deleteMethod(id: string) {
            try {
                const response = await fetch(
                    `/api/admin/payment-methods/${id}`,
                    {
                        method: "DELETE",
                    },
                );
                if (response.ok) loadPaymentMethods();
            } catch (error) {
                alert("Error al eliminar m√©todo");
            }
        }

        addMethodBtn?.addEventListener("click", async () => {
            const name = newMethodInput.value.trim();
            if (!name) return;

            try {
                const response = await fetch("/api/admin/payment-methods", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ name }),
                });
                if (response.ok) {
                    newMethodInput.value = "";
                    loadPaymentMethods();
                }
            } catch (error) {
                alert("Error al a√±adir m√©todo");
            }
        });

        // Initialize
        loadPaymentMethods();
    </script>
</AdminLayout>
